#include <Servo.h>

#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

Servo MojeSerwo;
LiquidCrystal_I2C lcd(0x27, 16, 2); // Adres 0x27 jest najczÄ™stszy
void setup() {
lcd.init();
lcd.backlight();
MojeSerwo.attach(9);
pinMode(2, INPUT_PULLUP);
pinMode(3, INPUT_PULLUP);
pinMode(4, INPUT_PULLUP);
pinMode(12, INPUT_PULLUP);

pinMode(10, OUTPUT); 
  lcd.setCursor(0, 0);
  lcd.print("Pozycja 1      ");
lcd.setCursor(0,1);
    
lcd.print("Gotowy do pracy");

}

void loop() {
  int spawanie = 0;
  if(digitalRead(2) == LOW && spawanie == 0){
  lcd.setCursor(0, 0);
  lcd.print("Pozycja 0       ");
  MojeSerwo.write(0);
  delay(1000);
  

  }
  
  if(digitalRead(3) == LOW && spawanie == 0){
  lcd.setCursor(0, 0);
  lcd.print("Pozycja 1       ");
  MojeSerwo.write(90);
  delay(1000);
  }
  if(digitalRead(4) == LOW && spawanie == 0){
  lcd.setCursor(0, 0);
  lcd.print("Pozycja 2       ");
  MojeSerwo.write(180);
  delay(1000);
  }
  if(digitalRead(12) == LOW){
    spawanie = 1;
    lcd.setCursor(0,1);
    lcd.print("Spawanie        ");
    lcd.setCursor(0,1);
    digitalWrite(10, HIGH);
    delay(10000);
    digitalWrite(10,LOW);
    lcd.setCursor(0,1);
    
    lcd.print("Gotowy do pracy");

    spawanie = 0;
  }
}
